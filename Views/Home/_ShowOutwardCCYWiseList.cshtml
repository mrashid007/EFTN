@model IEnumerable<EFTN.Models.OutwardCCYWiseList>
<div class="panel-heading">
    <div style="text-align:center;font-weight:bolder;border-bottom:dashed;">
        Outward CCY Wise List
    </div>
    <div>
        <table id="tblOCECCYWiseListHeader" style="width:100%; ">
            <tr>
                <th style="width:40%;text-align:center;">
                    CCY
                </th>
                <th style="width:15%;text-align:center;">
                    Maker
                </th>
                <th style="width:15%;text-align:center;">
                    Checker
                </th>
                <th style="width:15%;text-align:center;">
                    Admin
                </th>
                <th style="width:15%;text-align:center;">
                    OCE
                </th>
                <th style="width:15%;text-align:center;">
                    IRE
                </th>
            </tr>
        </table>
    </div>
</div>
<div class="panel-body" style="overflow-y:scroll;height:200px;">

    <table id="tblOCECCYWiseList" class="table table-striped table-bordered" style="width:100%; ">


        @foreach (var item in Model)
        {
            <tr>
                <td style="width:50%;text-align:center;">
                    @Html.ActionLink(item.CCY, "CCYWiseOutwardList", "Outward", new { CCY = item.CCY }, null)
                </td>
                <td style="width:10%;text-align:center;">
                    @Html.DisplayFor(modelItem => item.MakerCnt)
                </td>
                <td style="width:10%;text-align:center;">
                    @Html.DisplayFor(modelItem => item.CheckerCnt)
                </td>
                <td style="width:10%;text-align:center;">
                    @Html.DisplayFor(modelItem => item.AdminCnt)
                </td>
                <td style="width:10%;text-align:center;">
                    @Html.DisplayFor(modelItem => item.OCECreatedCnt)
                </td>
                <td style="width:10%;text-align:center;">
                    @Html.DisplayFor(modelItem => item.IRECnt)
                </td>
            </tr>
        }

    </table>
</div>

<div class="panel-footer">
    <table id="tblOCECCYWiseListFooter" style="width:100%; ">
        <tr>
            <th style="width:50%;text-align:center;">
                <font style="font-weight:bold;color:green;">Total</font>
            </th>
            <th style="width:10%;text-align:center;">
                <font style="font-weight:bold;color:green;">@Model.Sum(x => x.MakerCnt)</font>
           </th>
            <th style="width:10%;text-align:center;">
                <font style="font-weight:bold;color:green;">@Model.Sum(x => x.CheckerCnt)</font>
            </th>
            <th style="width:10%;text-align:center;">
                <font style="font-weight:bold;color:green;">@Model.Sum(x => x.AdminCnt)</font>
            </th>
            <th style="width:10%;text-align:center;">
                <font style="font-weight:bold;color:green;">@Model.Sum(x => x.OCECreatedCnt)</font>
            </th>
            <th style="width:10%;text-align:center;">
                <font style="font-weight:bold;color:green;">@Model.Sum(x => x.IRECnt)</font>
            </th>
        </tr>
    </table>
</div>

