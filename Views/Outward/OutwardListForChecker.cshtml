                <button class="btn btn-primary" type="button" title="Show" name="btnShow" id="btnShow">Show</button>
            </div>
        </div>
    </div>
    }
</div>

<div class="panel panel-primary list-panel" id="list-panel" style="height:400px;overflow:scroll;">
