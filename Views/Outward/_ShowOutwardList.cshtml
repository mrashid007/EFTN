@model IEnumerable<EFTN.Models.OutwardTransactionItem>

<table id="tblOutwardTransactionList" class="table table-striped table-bordered" style="width:100%">
    <tr>
        <th>
            <input type="checkbox" id="chkAll" value="Select" title="Select" /><label>Select All</label>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TraceNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BatchNumber)
        </th>
        <th>
            ReceivingBankRoutingNo 
            @*@Html.DisplayNameFor(model => model.ReceivingBankRoutingNo)*@
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DFIAccountNo)
        </th>
        <th>
            Sending Bank RoutNo 
            @*@Html.DisplayNameFor(model => model.SendingBankRoutNo)*@
        </th>
        <th>
            SendingBranchName
              @*@Html.DisplayNameFor(model => model.SendingBranchName)*@
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReceiverName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AccountNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IDNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CompanyName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BankName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PaymentInfo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TransType)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <input type="checkbox" name="OCEChk" class="OCEChk" id="chk_@item.EDRID" value="@item.EDRID" title="Select" /><label for="chk_@item.EDRID">Select</label>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TraceNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BatchNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReceivingBankRoutingNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DFIAccountNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SendingBankRoutNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SendingBranchName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReceiverName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IDNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BankName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentInfo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TransType)
            </td>
        </tr>
    }

</table>
<script>
    $(function () {
        $("#chkAll").click(function () {
            if ($('#chkAll').is(":checked")) {
                $('.OCEChk').prop('checked', true);
            }
            else {
                //alert("Unchecked");
                $('.OCEChk').prop('checked', false)

            }
        });
    });
</script>
